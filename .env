# Variáveis de ambiente para o backend SynapScale
# Copie este arquivo para .env e ajuste conforme necessário

# Ambiente (development, testing, production)
ENVIRONMENT=development

# Configurações da API
PROJECT_NAME=SynapScale Backend
VERSION=1.0.0
API_V1_STR=/api/v1

# Segurança
# IMPORTANTE: Gere uma chave secreta forte para produção
# Você pode usar: openssl rand -hex 32
SECRET_KEY=insecure_key_for_dev_only_please_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - origens permitidas (separadas por vírgula)
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:8080,http://localhost:3000

# Banco de dados
# SQLite para desenvolvimento
DATABASE_URL=sqlite+aiosqlite:///./synapse.db
# PostgreSQL para produção
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/synapse

# Redis (para rate limiting)
REDIS_URL=redis://localhost:6379/0

# Armazenamento
STORAGE_BASE_PATH=./storage
MAX_UPLOAD_SIZE=104857600  # 100MB em bytes

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hora em segundos

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Categorias de arquivos permitidas
ALLOWED_FILE_CATEGORIES=image,video,audio,document,archive

# Database configuration for local development
SQLALCHEMY_DATABASE_URI=sqlite+aiosqlite:///./synapse.db
