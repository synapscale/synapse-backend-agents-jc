# Armazenamento
STORAGE_BASE_PATH=./storage
MAX_UPLOAD_SIZE=104857600  # 100MB em bytes

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hora em segundos

