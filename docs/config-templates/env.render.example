# ============================

# ============================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ============================
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
DATABASE_SCHEMA=synapscale_db
DB_HOST=db-banco-dados-automacoes-do-user-13851907-0.e.db.ondigitalocean.com
DB_PORT=25060
DB_NAME=defaultdb
DB_USER=doadmin
DB_PASSWORD=COLOQUE_SUA_SENHA_AQUI
DB_SSLMODE=require

# ============================
# CONFIGURAÇÕES DE SEGURANÇA (OBRIGATÓRIAS)
# ============================
SECRET_KEY=GERE_UMA_CHAVE_SECRETA_FORTE_E_UNICA_DE_32_CARACTERES
JWT_SECRET_KEY=GERE_UMA_CHAVE_JWT_FORTE_E_UNICA_DE_32_CARACTERES
ENCRYPTION_KEY=GERE_UMA_CHAVE_CRIPTOGRAFIA_BASE64_DE_32_BYTES

# ============================
# CONFIGURAÇÕES DA API
# ============================
API_V1_STR=/api/v1
PROJECT_NAME=SynapScale Backend API
VERSION=1.0.4
DESCRIPTION=Plataforma de Automação com IA - API robusta e escalável
DEBUG=false
ENVIRONMENT=production

# ============================
# CONFIGURAÇÕES DE CORS (CRÍTICO PARA RENDER)
# ============================
BACKEND_CORS_ORIGINS=["https://seu-frontend.vercel.app","https://www.seu-dominio.com"]

# ============================
# CONFIGURAÇÕES DE EMAIL
# ============================
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-aplicativo-gmail
EMAILS_FROM_EMAIL=noreply@seu-dominio.com
EMAILS_FROM_NAME=SynapScale

# ============================
# CONFIGURAÇÕES DE UPLOAD
# ============================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt,.csv,.xlsx,.png,.jpg,.jpeg,.gif,.mp4,.mp3,.wav

# ============================
# CONFIGURAÇÕES DE CACHE (RENDER REDIS)
# ============================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# ============================
# CONFIGURAÇÕES DE IA (OPCIONAIS)
# ============================
OPENAI_API_KEY=sk-sua-chave-openai-aqui
ANTHROPIC_API_KEY=sua-chave-anthropic-aqui
GOOGLE_API_KEY=sua-chave-google-aqui
COHERE_API_KEY=sua-chave-cohere-aqui
HUGGINGFACE_API_KEY=sua-chave-huggingface-aqui

# ============================
# CONFIGURAÇÕES DE WEBHOOK
# ============================
WEBHOOK_SECRET=sua-chave-secreta-webhook-forte
WEBHOOK_TIMEOUT=30

# ============================
# CONFIGURAÇÕES DE RATE LIMITING
# ============================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================
# CONFIGURAÇÕES DE LOGGING
# ============================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/synapscale.log

# ============================
# CONFIGURAÇÕES DE MONITORAMENTO
# ============================
SENTRY_DSN=https://sua-url-sentry.ingest.sentry.io/projeto
PROMETHEUS_ENABLED=false
HEALTH_CHECK_ENABLED=true

# ============================
# CONFIGURAÇÕES DE BACKUP
# ============================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ============================
# CONFIGURAÇÕES DE WEBSOCKET
# ============================
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_TIMEOUT=300

# ============================
# CONFIGURAÇÕES ESPECÍFICAS DO RENDER
# ============================
PORT=8000
HOST=0.0.0.0

