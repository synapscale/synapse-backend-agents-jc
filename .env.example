# Configurações do Frontend - SynapScale
# Copie este arquivo para .env.local e configure as variáveis

# ✅ URL base da API do backend
NEXT_PUBLIC_API_BASE=http://localhost:8000/api/v1

# ✅ Ambiente da aplicação
NEXT_PUBLIC_APP_ENV=development

# ✅ URL da aplicação (para redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ✅ Configurações de debug
NEXT_PUBLIC_DEBUG_MODE=true

# ✅ Configurações de logging
NEXT_PUBLIC_LOG_LEVEL=debug

# ✅ Configurações de autenticação
NEXT_PUBLIC_AUTH_STORAGE_PREFIX=synapse_
NEXT_PUBLIC_TOKEN_EXPIRY_CHECK_INTERVAL=300000

# ✅ Configurações da API
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
