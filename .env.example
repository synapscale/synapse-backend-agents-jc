# ==============================================================================
# SYNAPSCALE BACKEND - CONFIGURAÇÃO DE AMBIENTE
# ==============================================================================
# ATENÇÃO: Este é um arquivo de exemplo. Copie para .env e configure os valores.
# NUNCA commite o arquivo .env com credenciais reais!

# ==============================================================================
# CONFIGURAÇÕES BÁSICAS
# ==============================================================================
ENVIRONMENT=development
DEBUG=true
PROJECT_NAME=SynapScale Backend
VERSION=2.0.0

# ==============================================================================
# SEGURANÇA - GERE CHAVES FORTES E ÚNICAS
# ==============================================================================
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))" para gerar
SECRET_KEY=GERE_UMA_CHAVE_SECRETA_FORTE_E_UNICA_DE_32_CARACTERES
JWT_SECRET_KEY=GERE_UMA_CHAVE_JWT_FORTE_E_UNICA_DE_32_CARACTERES
ENCRYPTION_KEY=GERE_UMA_CHAVE_CRIPTOGRAFIA_BASE64_DE_32_BYTES

# ==============================================================================
# BANCO DE DADOS
# ==============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/synapscale_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_ECHO=false

# ==============================================================================
# PROVEDORES DE IA - Configure apenas os que você usar
# ==============================================================================
OPENAI_API_KEY=sua_chave_openai_aqui
ANTHROPIC_API_KEY=sua_chave_anthropic_aqui
GEMINI_API_KEY=sua_chave_gemini_aqui
MISTRAL_API_KEY=sua_chave_mistral_aqui
GROK_API_KEY=sua_chave_grok_aqui
DEEPSEEK_API_KEY=sua_chave_deepseek_aqui
LLAMA_API_KEY=sua_chave_llama_aqui
HUGGINGFACE_API_KEY=sua_chave_huggingface_aqui

# ==============================================================================
# AWS S3 (Se usar armazenamento S3)
# ==============================================================================
AWS_ACCESS_KEY_ID=sua_access_key_aws
AWS_SECRET_ACCESS_KEY=sua_secret_key_aws
AWS_BUCKET_NAME=seu_bucket_name
AWS_REGION=us-east-1

# ==============================================================================
# GOOGLE CLOUD STORAGE (Se usar GCS)
# ==============================================================================
GCS_BUCKET_NAME=seu_bucket_gcs
GCS_CREDENTIALS_PATH=caminho_para_credenciais.json

# ==============================================================================
# EMAIL SMTP
# ==============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_ou_app_password
SMTP_FROM_EMAIL=noreply@synapscale.com
SMTP_FROM_NAME=SynapScale
SMTP_USE_TLS=true

# ==============================================================================
# REDIS
# ==============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=sua_senha_redis_se_necessario
REDIS_DB=0

# ==============================================================================
# CORS E FRONTEND
# ==============================================================================
FRONTEND_URL=http://localhost:3000
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================================================
# MONITORAMENTO
# ==============================================================================
SENTRY_DSN=sua_dsn_sentry_para_monitoramento
LOG_LEVEL=INFO
ENABLE_METRICS=true
