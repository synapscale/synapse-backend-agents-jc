# ==============================================================================
# PRISMA CONNECTION CONFIGURATION
# ==============================================================================

# Connection Pool Settings (para PostgreSQL)
# Essas configurações ajudam a evitar problemas de conexão
PRISMA_CONNECTION_TIMEOUT=10000
PRISMA_POOL_SIZE=10
PRISMA_POOL_MIN=2
PRISMA_POOL_MAX=20
PRISMA_POOL_ACQUIRE_TIMEOUT=30000
PRISMA_POOL_CREATE_TIMEOUT=30000
PRISMA_POOL_DESTROY_TIMEOUT=10000
PRISMA_POOL_IDLE_TIMEOUT=30000
PRISMA_POOL_REAP_INTERVAL=1000
PRISMA_POOL_LOG=false

# Query Timeout
PRISMA_QUERY_TIMEOUT=10000

# SSL Configuration (se necessário)
PRISMA_SSL_MODE=prefer

# Debug Settings
PRISMA_DEBUG=false
PRISMA_LOG_QUERIES=false
