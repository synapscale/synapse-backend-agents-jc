# ===== CONFIGURAÇÕES BÁSICAS =====
ENVIRONMENT=development
PROJECT_NAME=SynapScale Backend
VERSION=1.0.0
API_V1_STR=/api/v1

# ===== SEGURANÇA =====
# IMPORTANTE: Gere uma chave secreta forte para produção
# Use: openssl rand -hex 32
SECRET_KEY=your_super_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== CORS =====
# Configure apenas os domínios necessários em produção
BACKEND_CORS_ORIGINS=["http://localhost", "http://localhost:8080", "http://localhost:3000"]

# ===== BANCO DE DADOS POSTGRESQL =====
# PostgreSQL com Prisma
# Substitua pela sua URL real do banco de dados
DATABASE_URL="postgresql://username:password@localhost:5432/synapscale_db"

# ===== ARMAZENAMENTO =====
STORAGE_BASE_PATH=./storage
MAX_UPLOAD_SIZE=104857600

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===== ARQUIVOS =====
ALLOWED_FILE_CATEGORIES=image,video,audio,document,archive

# ===== PROVEDORES DE IA =====
# Configure apenas os provedores que você vai usar

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here

# Grok (X.AI)
GROK_API_KEY=your_grok_api_key_here

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Llama (Groq)
GROQ_API_KEY=your_groq_api_key_here

# ===== EMAIL (OPCIONAL) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com

# ===== DESENVOLVIMENTO =====
DEBUG=false
RELOAD=false

